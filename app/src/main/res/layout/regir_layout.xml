<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textSize="25sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="375dp"
            />
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/login_simple"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="188dp"
        android:layout_marginTop="75dp"
        android:background="#fcf19f"
        app:roundAsCircle="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="328dp" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="68dp" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/reg_username"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入密码"
        android:layout_alignLeft="@+id/reg_username"

        />

    <ImageView
        android:id="@+id/hide_eye"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="254dp"
        app:srcCompat="@drawable/eye"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp" />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hide_eye"
        android:layout_alignParentEnd="true"
        android:text="忘记密码"
        android:textColor="#000"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="390dp"
        android:background="@drawable/shape_login"
        android:text="注册"
        android:textColor="#FFF" />
</RelativeLayout>
